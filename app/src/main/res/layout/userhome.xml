<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/maincardview">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/wing"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/paybill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wing"
                            android:layout_marginLeft="18dp"
                            android:text="Pay Bill"
                            android:layout_marginTop="5dp"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@id/cardview2"
                    android:layout_marginLeft="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/wing2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/request"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_below="@+id/wing2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Request"
                            android:layout_marginLeft="15dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview3"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/wing3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/auditreport"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_below="@+id/wing3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audit Reports"
                            android:layout_marginLeft="22dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview4"
                    android:layout_marginLeft="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/wing4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bulletineboard"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wing4"
                            android:layout_marginLeft="22dp"
                            android:text="Bulletin Board" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear2"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview5"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/wing5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/activity"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wing5"
                            android:layout_marginLeft="22dp"
                            android:text="Society Activity" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview6"
                    android:layout_marginLeft="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/wing6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/mom"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below="@+id/wing6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   MOM"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear3"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:elevation="6dp"
                    android:id="@+id/cardview7"
                    android:layout_marginRight="10dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/wing7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/cityscape"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wing7"
                            android:layout_marginLeft="22dp"
                            android:text="Party legder" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>