<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    android:layout_below="@+id/search"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative"
        android:padding="5dp">
        <TextView
            android:id="@+id/auditid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audit ID : "/>
        <TextView
            android:id="@+id/audit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/auditid"
            android:text="AU_Report0001"/>
        <TextView
            android:id="@+id/showdatedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/audit"
            android:layout_marginTop="3dp"
            android:text="Date : "/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/showdatedate"
            android:layout_below="@+id/audit"
            android:layout_marginTop="3dp"
            android:text="22/06/2018"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_file_download_black_24dp"
            android:layout_below="@+id/audit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/attachurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="3dp"
            android:text=""
            />
        <TextView
            android:id="@+id/attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/attachurl"
            android:layout_marginTop="3dp"
            android:text=""
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>