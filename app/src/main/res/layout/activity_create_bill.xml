<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_person_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucky"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="10dp"
                android:id="@+id/firstname"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:layout_below="@id/firstname"
                android:background="@drawable/ic_phone_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:id="@+id/phn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:layout_toRightOf="@+id/phn"
                android:layout_below="@+id/firstname"
                android:id="@+id/number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat No:"
                android:layout_toRightOf="@+id/buildingno"
                android:layout_below="@+id/number"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/flattxt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-101"
                android:layout_toRightOf="@+id/flattxt"
                android:layout_below="@+id/number"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/flat"/>
            <TextView
                android:id="@+id/buildingnotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/img"
                android:text="Building No:"
                />
            <TextView
                android:id="@+id/buildingno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/buildingnotxt"
                android:text="wing-A"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:text="Create Bill"
                android:background="@drawable/white_sqr"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:layout_below="@+id/img"/>
        </RelativeLayout>
       </android.support.v7.widget.CardView>
</RelativeLayout>



