<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request id : "
                        android:layout_marginTop="5dp"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/blank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/request"
                        android:layout_marginTop="5dp"
                        android:hint="101"
                        android:textSize="13dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/status"
                        android:text="status"
                        android:textSize="13dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:id="@+id/reqmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Request Message : "
                        android:layout_below="@+id/blank"
                        android:textSize="13dp"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/responce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/reqmsg"
                        android:text="Response Message : "
                        android:textSize="13dp"
                        android:singleLine="true"/>
                    <TextView
                        android:id="@+id/reqdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Date : "
                        android:layout_below="@+id/responce"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/blank2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/responce"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/reqdate"
                        android:hint="11/07/2018"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/details"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/responce"
                       android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="View"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginRight="3dp"
                        android:background="@color/colorPrimary"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
</RelativeLayout>