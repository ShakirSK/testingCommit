<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maneger.process_member_request.MemberRequestWrite">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:id="@+id/toolbar">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/app"
        android:id="@+id/scrollView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        app:elevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative2"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Request Date : "/>

            <TextView
                android:id="@+id/req_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/date2"
                android:hint="10/07/2018"
                android:textSize="15dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date2"
                android:layout_marginTop="10dp"
                android:text="Request Id : "
                android:id="@+id/memberid2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/memberid2"
                android:layout_below="@+id/date2"
                android:hint=" 101"
                android:textSize="15dp"
                android:id="@+id/req_id"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memberid2"
                android:layout_marginTop="10dp"
                android:text="Member Name : "
                android:id="@+id/membername2"/>
            <TextView
                android:id="@+id/lucky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/membername2"
                android:layout_below="@+id/memberid2"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:hint=" Lucky Carlo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lucky"
                android:layout_marginTop="10dp"
                android:text="Request Status : "
                android:id="@+id/memberrequest"/>
            <TextView
                android:id="@+id/here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/memberrequest"
                android:layout_below="@+id/lucky"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:hint="Close "/>
            <!--open,close,add sppiner-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Request : "
                android:layout_below="@+id/here"
                android:id="@+id/txtusermesg"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/here"
                android:text="user request"
                android:layout_toRightOf="@+id/txtusermesg"
                android:id="@+id/usermesg"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Response : "
                android:layout_below="@+id/usermesg"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:id="@+id/action"/>

            <EditText
                android:id="@+id/actionhere"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/action"
                android:layout_marginTop="10dp"
                android:hint="Write Response Here..."
                android:textAlignment="textStart"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/square"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/sumbmitbtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnheight"
                android:layout_below="@+id/actionhere"
                android:background="@drawable/sqrbtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>