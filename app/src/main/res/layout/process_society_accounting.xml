<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardElevation="3dp"
    android:layout_marginTop="5dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:id="@+id/relative2"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unpaid"
            android:id="@+id/status"
            android:background="@drawable/square"
            android:layout_alignParentRight="true"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"
            android:text="Lucky Carlo "
            android:layout_toRightOf="@+id/firstname"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billamount"
            android:layout_toRightOf="@+id/profile"
            android:text="Bill Amount:"
            android:layout_below="@id/lastname"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billamt"
            android:text="11000.00"
            android:layout_below="@id/lastname"
            android:layout_toRightOf="@id/billamount"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paidamount"

            android:layout_below="@id/billamount"
            android:layout_marginTop="3dp"
            android:text="Paid Amount:"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paidamt"
            android:text="0.00"
            android:layout_below="@id/billamount"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/paidamount"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paymode"
            android:layout_below="@id/paidamount"
            android:text="Payment Mode:"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pmode"
            android:text="Cash"
            android:layout_below="@id/paidamount"
            android:layout_toRightOf="@id/paymode"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/refno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymode"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Reference Number:" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rno"
            android:text="0000000000"
            android:layout_below="@id/paymode"
            android:layout_toRightOf="@+id/refno"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bank"
            android:text="Bank Account:"
            android:layout_below="@id/refno"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bankacc"
            android:text="aaaaaaa"
            android:layout_below="@id/refno"
            android:layout_toRightOf="@id/bank"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
