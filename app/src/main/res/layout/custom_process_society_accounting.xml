<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardElevation="4dp"
    android:layout_marginTop="5dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:id="@+id/relative2"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_person_black_24dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstname"
            android:layout_toRightOf="@+id/profile"
            android:text="Lucky "
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastname"
            android:text="Carlo "
            android:layout_toRightOf="@+id/firstname"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flat"
            android:text="Flat No : "
            android:layout_toRightOf="@+id/profile"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/firstname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flatno"
            android:layout_below="@+id/firstname"
            android:layout_toRightOf="@+id/flat"
            android:layout_marginTop="3dp"
            android:text="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/building"
            android:text="Building No : "
            android:layout_toRightOf="@+id/profile"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/flat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buildingno"
            android:layout_below="@+id/flatno"
            android:layout_toRightOf="@+id/building"
            android:layout_marginTop="3dp"
            android:text="102"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment"
            android:text="Payment Status : "
            android:layout_toRightOf="@+id/profile"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/building" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number3"
            android:layout_below="@+id/buildingno"
            android:layout_toRightOf="@+id/payment"
            android:layout_marginTop="3dp"
            android:text="Paid"
            android:textColor="@color/green"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
