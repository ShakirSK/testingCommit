<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/topforgotpass"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:gravity="center"
        android:textSize="23dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:id="@+id/txtforpass"
        app:layout_constraintTop_toBottomOf="@+id/topforgotpass"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We just need your registered email address to send you password"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/lightgray"
        android:layout_margin="20dp"
        android:id="@+id/txtregid"
        app:layout_constraintTop_toBottomOf="@+id/txtforpass"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"
        android:id="@+id/txtfpemil"
        app:layout_constraintTop_toBottomOf="@+id/txtregid"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailidforgotpass"
        android:padding="18dp"
        android:layout_margin="20dp"
        android:textColor="@color/blue"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/txtfpemil"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_margin="20dp"
        android:id="@+id/submitforgotpass"
        android:textColor="@color/white"
        android:background="@drawable/sqrbtn"
        app:layout_constraintTop_toBottomOf="@+id/emailidforgotpass"/>

    <LinearLayout
        android:id="@+id/fplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/submitforgotpass">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center|center_horizontal"/>

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="back"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:id="@+id/forgotpassmesg"
        app:layout_constraintTop_toBottomOf="@+id/fplay"/>
</android.support.constraint.ConstraintLayout>
