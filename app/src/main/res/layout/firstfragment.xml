<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/recycleview"
        android:layout_marginBottom="60dp"
       >
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maincardview"
        app:elevation="6dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:visibility="gone"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kulkarni Society"
                android:layout_marginLeft="10dp"
                android:id="@+id/societyname"
                android:textSize="18dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/societyaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/societyname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize"
                android:text="Jai mata di nagar Jule Solapur, karnataka highway, Solapur."/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:visibility="gone"
        android:layout_below="@+id/yearspan">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:layout_marginTop="15dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="6dp"
        android:id="@+id/cardview"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/wing"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
              android:background="@drawable/addmember" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wing"
               android:layout_marginLeft="18dp"
                android:text="  Add Member" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="6dp"
        android:id="@id/cardview2"
        android:layout_marginLeft="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/wing2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/viewpro"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_below="@+id/wing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Members"
               android:textAlignment="center"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            android:id="@+id/cardview3"
            android:layout_marginRight="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/wing3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/processreq"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_below="@+id/wing3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Process Member Request"
                 android:textAlignment="center"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            android:id="@+id/cardview4"
            android:layout_marginLeft="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/wing4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/societyaccount"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_below="@+id/wing4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Society Accounting"
                  android:textAlignment="center"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear2"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            android:id="@+id/cardview5"
            android:layout_marginRight="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/wing5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bulletineboard"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@+id/wing5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Bulletin Board"
                    android:textAlignment="center" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            android:id="@+id/cardview6"
            android:layout_marginLeft="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/wing6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/activity"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_below="@+id/wing6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Society Activity"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

        </RelativeLayout>
    </ScrollView>


  <!--  <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
