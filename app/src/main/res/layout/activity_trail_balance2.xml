<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app"
            android:background="@color/barbottom"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tool"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                >

                <!-- <ImageView
                     android:id="@+id/notification"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:background="@drawable/ic_notifications_none_black_24dp"
                    android:layout_marginLeft="250dp"/>-->
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/calander"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app"
                            android:text="YEAR"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/summaryname"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/app"
                            android:text="2018"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/totalamountgross"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/app"
                            android:text=""
                            android:layout_gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>0
        <LinearLayout
            android:id="@+id/for_Trail_Balance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_below="@+id/app">

            <RelativeLayout
                android:id="@+id/Trail_Balance_Ledger_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/partynameledger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Sundry Debtors"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratlight"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/amountledger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserratlight"
                        android:textSize="15dp"
                        />

                </LinearLayout>

            </RelativeLayout>
            <View
                android:id="@+id/viewline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                />

            <RelativeLayout
                android:id="@+id/Trail_Balance_Account_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/partynameaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Sales Account"
                    android:fontFamily="@font/montserratlight"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/amountaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserratlight"
                        android:textSize="15dp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
